{
  "name": "@dddforum/api",
  "version": "0.1.0",
  "private": true,
  "description": "A basic typescript app starter for 2023.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start:dev": "npx nodemon",
    "start": "npm run build && node ./build/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "db:start": "docker-compose up -d --wait --build",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.4",
    "drizzle-kit": "^0.20.14",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.6",
    "express": "^4.18.3",
    "pg": "^8.11.3"
  }
}
